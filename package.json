{
  "name": "api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "prisma": {
    "schema": "prisma/schema",
    "seed": "tsx src/database/seed.ts"
  },
  "scripts": {
    "build": "rm -rf ./build && tsup ./src",
    "dev:all": "concurrently \"yarn dev:queue\" \"yarn dev\"",
    "dev": "tsx watch src/server.ts",
    "start": "NODE_ENV=production node ./build/server.js",
    "dev:queue": "tsx watch src/queue.ts",
    "queue": "NODE_ENV=production node ./build/queue.js",
    "db:migrate:dev": "prisma migrate dev",
    "db:migrate:prod": "NODE_ENV=production prisma migrate deploy && node build/database/seed.js",
    "db:seed": "prisma db seed"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.726.1",
    "@aws-sdk/client-ses": "^3.726.1",
    "@hapi/boom": "^10.0.0",
    "@prisma/client": "^6.2.1",
    "aws-sdk": "^2.1692.0",
    "axios": "^1.7.9",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.34.10",
    "concurrently": "^9.1.2",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "express-basic-auth": "^1.2.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "node-schedule": "^2.1.0",
    "reflect-metadata": "^0.2.2",
    "sharp": "^0.33.5",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "uuid": "^11.0.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/aws-sdk": "^2.7.4",
    "@types/axios": "^0.14.4",
    "@types/bcryptjs": "^2.4.6",
    "@types/bull": "^4.10.4",
    "@types/cors": "^2.8.17",
    "@types/date-fns": "^2.6.3",
    "@types/dotenv": "^8.2.3",
    "@types/express": "^4.17.17",
    "@types/express-serve-static-core": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/mime-types": "^2.1.4",
    "@types/multer": "^1.4.12",
    "@types/multer-s3": "^3.0.3",
    "@types/node-schedule": "^2.1.7",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "cross-env": "^7.0.2",
    "eslint": "^9.18.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^17.15.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^7.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "prisma": "^6.2.1",
